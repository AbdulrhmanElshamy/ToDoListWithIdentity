@model ToDo

<div class="modal-body">
    <form asp-action="@(Model?.Id > 0 ? "Edit" : "Create" )" method="post">

        @if (Model?.Id > 0)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>



